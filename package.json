{
  "name": "backend-rps",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^16.4.5",
    "ws": "^8.16.0"
  },
  "main": "server.js",
  "scripts": {
    "client": "npm start --prefix client",
    "server": "node server",
    "start": "concurrently -n \"FRONTEND,BACKEND\" -c \"red,blue\" -p \"[{name}]\" \"npm run server\" \"npm run client\"",
